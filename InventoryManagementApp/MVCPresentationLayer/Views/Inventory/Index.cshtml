@model IEnumerable<DataObjects.Part>

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add New Part to System", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.PartNumber)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PartName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Description)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Cost)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
<tr>
	<td>
		@Html.DisplayFor(modelItem => item.PartNumber)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.PartName)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Description)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Cost)
	</td>
	<td>
		@Html.ActionLink("Edit", "Edit", new { partNumber = item.PartNumber }) |
		@Html.ActionLink("Details", "Details", new { partNumber = item.PartNumber }) |
		@Html.ActionLink("Delete", "Delete", new { partNumber = item.PartNumber })
	</td>
</tr>
}

</table>
